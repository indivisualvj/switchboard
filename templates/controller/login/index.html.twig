{% extends 'base.html.twig' %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="login">
        <form class="login" action="{{ path('app_login_check') }}" method="post">
            <input type="text" id="username" name="_username" placeholder="username" value="{{ last_username }}"/>

            <input type="password" id="password" placeholder="password" name="_password"/>

            {# If you want to control the URL the user is redirected to on success
            <input type="hidden" name="_target_path" value="/account"/> #}

            <button type="submit">login</button>
        </form>
    </div>
{% endblock %}
