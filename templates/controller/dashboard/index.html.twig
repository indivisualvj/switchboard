{% extends 'base.html.twig' %}

{% block main %}
    <div class="panel" data-controller="log" data-log-interval-value="10" data-log-url-value="{{ path('app_dashboard_sysinfo') }}">
        <h3>System</h3>
        <div class="log" data-log-target="console"></div>
    </div>
    <div class="panel" data-controller="log" data-log-interval-value="15" data-log-url-value="{{ path('app_dashboard_watchlog') }}">
        <h3>PV</h3>
        <div class="log" data-log-target="console"></div>
    </div>
    <div class="panel" data-controller="log" data-log-interval-value="60" data-log-url-value="{{ path('app_statistics_table') }}">
        <h3>Statistics (1h)</h3>
        <div class="log" data-log-target="console"></div>
    </div>
    <div class="panel" data-controller="log" data-log-interval-value="60" data-log-url-value="{{ path('app_statistics_table', {'interval': 720}) }}">
        <h3>Statistics (12h)</h3>
        <div class="log" data-log-target="console"></div>
    </div>
    <div class="panel" data-controller="log" data-log-interval-value="60" data-log-url-value="{{ path('app_statistics_table', {'interval': 1440}) }}">
        <h3>Statistics (24h)</h3>
        <div class="log" data-log-target="console"></div>
    </div>
{% endblock %}
