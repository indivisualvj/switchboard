<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        {% block body %}
            <header>
                {% block header %}
                    <div class="controls" data-controller="service">
                        <button data-action="click->service#execute:prevent" data-service-target="button" data-url="{{ path('app_dashboard_stopservice') }}">Stop Service</button>
                        <button data-action="click->service#execute:prevent" data-service-target="button" data-url="{{ path('app_dashboard_startservice') }}">Start Service</button>
                        <button data-action="click->service#edit:prevent"
                                data-service-target="button"
                                data-file="inputs.yaml"
                                data-load-url="{{ path('app_dashboard_loadinputs') }}"
                                data-save-url="{{ path('app_dashboard_saveinputs') }}"
                        >inputs.yaml (Edit)</button>
                        <button data-action="click->service#edit:prevent"
                                data-service-target="button"
                                data-file="rules.yaml"
                                data-load-url="{{ path('app_dashboard_loadrules') }}"
                                data-save-url="{{ path('app_dashboard_saverules') }}"
                        >rules.yaml (Edit)</button>
                        <button data-action="click->service#edit:prevent"
                                data-service-target="button"
                                data-file="outputs.yaml"
                                data-load-url="{{ path('app_dashboard_loadoutputs') }}"
                                data-save-url="{{ path('app_dashboard_saveoutputs') }}"
                        >outputs.yaml (Edit)</button>
                        <button data-action="click->service#closeEditor:prevent">Cancel</button>
                        <div id="editor" style="display: none" data-service-target="editor"></div>
                    </div>
                {% endblock %}
            </header>
            <main>
                {% block main %}{% endblock %}
            </main>
            <footer>
                {% block footer %}
                {% endblock %}
            </footer>
        {% endblock %}
    </body>
</html>
